<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="Theme.RecipeMate" parent="Base.Theme.RecipeMate" />

    <style name="CornerImageShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10dp</item>
        <item name="color">@color/transparentColor</item>
    </style>

    <style name="AuthFirstHeaderTextStyle">
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AuthSecondHeaderTextStyle">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AuthBodyTextStyle">
        <item name="android:textColor">@color/greyColor</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxCornerRadiusTopStart">@dimen/_24dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_24dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_24dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_24dp</item>
    </style>
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>
    <style name="titleValues" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/greyColor</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="sectionTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>